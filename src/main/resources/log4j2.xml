<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} %-5level %logger{36} %msg%n"/>
        </Console>
        <RollingFile name = "RollingFile"
                     fileName = "logs/hippodrome.log"
                     filePattern="logs/hippodrome.%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern = "%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} %-5level %logger{36} %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="1">
                    <IfFileName glob="*.log"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref ="RollingFile"/>
        </Root>
        <Logger name="Main" level="trace" additivity="true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="Horse" level="trace" additivity="true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="Hippodrome" level="trace" additivity="true">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>